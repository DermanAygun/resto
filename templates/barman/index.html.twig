{% extends 'base.html.twig' %}

{% block title %}Barman index{% endblock %}

{% block body %}
    <h1>Barman index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Drank</th>
                <th>Prijs</th>
                <th>Beschrijving</th>
                <th>Alcohol</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for barman in barmen %}
            <tr>
                <td>{{ barman.id }}</td>
                <td>{{ barman.drank }}</td>
                <td>{{ barman.prijs }}</td>
                <td>{{ barman.beschrijving }}</td>
                <td>{{ barman.alcohol ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('barman_show', {'id': barman.id}) }}">show</a>
                    <a href="{{ path('barman_edit', {'id': barman.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('barman_new') }}">Create new</a>
{% endblock %}
